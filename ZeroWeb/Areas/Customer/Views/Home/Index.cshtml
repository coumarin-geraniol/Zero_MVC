@model IEnumerable<Product>


<div class="row px-2">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row">
                <div class="col-12 p-1">
                    <div class="card bg-light mb-3" style="max-width: 19rem;">

                        <img src="@product.ImageUrl" class="card" />


                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-danger opacity-75 text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    As low as:
                                    <span class="text-success">
                                        @product.Price.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-dark bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>