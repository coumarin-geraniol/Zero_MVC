@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="card shadow border-dark border-top mt-4">
    <div class="card-header bg-danger bg-opacity-75 ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 text-danger text-center fs-4 text-opacity-75">
        You do not have access to this resource.
    </div>
</div>
