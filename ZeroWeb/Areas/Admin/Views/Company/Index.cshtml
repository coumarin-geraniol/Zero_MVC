

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row  mb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" class="btn btn-outline-dark">
                    <i class="bi bi-plus-square"></i> Create New Company
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-hover table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>State</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}